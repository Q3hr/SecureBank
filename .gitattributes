# .gitattributes file for SecureBank repository

# Define language detection for common web application files
*.py linguist-language=Python
*.html linguist-language=HTML
*.css linguist-language=CSS
*.js linguist-language=JavaScript
*.json linguist-language=JSON
*.sql linguist-language=SQL
*.md linguist-language=Markdown

# Flask/Python specific files
*.py linguist-detectable=true
requirements.txt linguist-language=Text
config.py linguist-language=Python
wsgi.py linguist-language=Python
run.py linguist-language=Python

# Web frontend files
*.html linguist-detectable=true
*.css linguist-detectable=true
*.js linguist-detectable=true
*.scss linguist-language=SCSS
*.sass linguist-language=Sass

# Template files (if using Jinja2/Flask templates)
*.jinja linguist-language=HTML
*.jinja2 linguist-language=HTML

# Configuration files
*.yaml linguist-language=YAML
*.yml linguist-language=YAML
*.toml linguist-language=TOML
*.ini linguist-language=INI
.env linguist-language=Shell
Dockerfile linguist-language=Dockerfile
docker-compose.yml linguist-language=YAML

# Database files
*.sql linguist-detectable=true
migrations/* linguist-language=Python

# Exclude certain files from language statistics
*.log linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true
node_modules/* linguist-vendored=true
venv/* linguist-vendored=true
env/* linguist-vendored=true
__pycache__/* linguist-generated=true
*.pyc linguist-generated=true

# Documentation files
README.md linguist-documentation=true
CHANGELOG.md linguist-documentation=true
LICENSE linguist-documentation=true
docs/* linguist-documentation=true

# Security and compliance files
security.md linguist-documentation=true
*.pem linguist-generated=true
*.key linguist-generated=true